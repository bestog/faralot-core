<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/header_background"
                android:padding="5dp"
  >

  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/drawer_layout_picture"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_centerVertical="true"
    android:layout_margin="5dp"
    android:src="@drawable/img_no_picture_white"
    app:civ_border_color="@color/drawer_image_border"
    app:civ_border_width="1dp"
    />

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_toEndOf="@id/drawer_layout_picture"
    android:layout_toRightOf="@id/drawer_layout_picture"
    android:paddingEnd="0dp"
    android:paddingLeft="10dp"
    android:paddingRight="0dp"
    android:paddingStart="10dp"
    >

    <TextView
      android:id="@+id/drawer_layout_username"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/header_text"
      android:textSize="30sp"
      android:textStyle="bold"
      />

    <TextView
      android:id="@+id/drawer_layout_points"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="2dp"
      android:textColor="@color/header_text"
      android:textSize="14sp"
      android:textStyle="bold|italic"
      />

  </LinearLayout>
</RelativeLayout>